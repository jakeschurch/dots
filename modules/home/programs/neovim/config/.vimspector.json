{
"$schema": "https://puremourning.github.com/vimspector/schema/vimspector.schema.json",
  "configurations": {
    "django": {
      "adapter": "debugpy",
      "configuration": {
        "request":  "launch",
        "stopOnEntry": true,
        "python": "${VIRTUAL_ENV}/bin/python3",
        "program": "${workspaceRoot}/manage.py",
        "args": [ "runserver", "localhost:8000", "--noreload" ],
        "django": true
      }
    }
  }
}
